{% extends 'base.html.twig' %}

{% block title %}Articles en tous genre !
{% endblock %}

{% block body %}
{% include "nav.html.twig" %}
    <div class="card m-2">
        <div class="card-columns m-3">
            {% for article in articles %}
                <div class="card">
                    <img class="card-img-top" src="{{article.featuredimage}}" alt="photo">
                    <div class="card-body">
                        <h4 class="card-title">{{ article.titre }}</h4>
                        <p class="card-text">{{ article.contenu | length > 50 ? article.contenu | slice(0, 50) ~ '...' : article.contenu }}</p>
                    <h5>
                        <a href="{{ path('actualites_article', {'slug': article.slug}) }}">Lire la suite...</a>
                    </h5>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
